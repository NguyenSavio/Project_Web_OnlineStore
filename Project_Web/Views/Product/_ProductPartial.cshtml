            <p>@product.Name</p>
            <a class="view" asp-controller="Product" asp-action="ProductDetails" asp-route-id="@product.Id"><strong>Detail</strong></a>
            <a asp-route="addcart" asp-route-productid="@product.Id" class="buy"><strong>Add to Cart</strong> </a>
